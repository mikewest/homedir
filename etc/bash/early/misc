# miscellaneous settings

#   overwritten in HOST specific files
export     VISUAL='vi'

#   VI!
set -o vi

# PHP Runtime Config
export      PHPRC="${HOME}/lib/php/php.ini"
export     PHPLIB="${HOME}/lib/php/"

[ -x "${HOME}/Repositories/" ]      &&  repository_base="${HOME}/Repositories"
[ -x "${HOME}/SVN Repositories/" ]  &&  svn_branches_base="${HOME}/SVN Repositories"
