# commands specific to my home iMac

need mate <<end
    export VISUAL="${HOME}/bin/textmate";
    alias commit='git diff --cached | mate ; git commit';
end

function gd {
    git diff "$@" | mate
}

export prompt_prefix="${pyellow}iMac${preset} "