# ~/etc/bash/rc/files
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
#
# useful output when working with files

alias   diff='diff -u'

alias    f.='find .'
alias   fgr='find . | egrep -i'
alias   fgx='find . -print0 | xargs -0 egrep -i'

alias   ll='ls -lah'
alias   ls='ls -F'

alias   mkdir='mkdir -p'

alias   rm='rm -i'  # I have a feeling this will annoy me, but I'll try it out.  :)
