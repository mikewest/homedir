# ~/etc/bash/rc/history
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
#
# control history capturing

export   HISTCONTROL=erasedups
export  HISTFILESIZE=10000
export      HISTFILE="${HOME}/var/bash_history"

alias    h='history 20'
alias   hg='history | ack'

shopt -s histappend
